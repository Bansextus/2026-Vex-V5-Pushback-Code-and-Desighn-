<Application x:Class="Tahera.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
  <Application.Resources>
    <SolidColorBrush x:Key="BgBrush" Color="#101D2F" />
    <SolidColorBrush x:Key="CardBrush" Color="#1A2D44" />
    <SolidColorBrush x:Key="AccentBrush" Color="#4CD7A8" />
    <SolidColorBrush x:Key="TextBrush" Color="#E7EEF7" />
    <SolidColorBrush x:Key="SubBrush" Color="#B2C1D1" />

    <Style TargetType="Window">
      <Setter Property="FontFamily" Value="Segoe UI Semibold" />
      <Setter Property="FontSize" Value="16" />
    </Style>

    <Style TargetType="TextBlock">
      <Setter Property="Foreground" Value="{StaticResource TextBrush}" />
      <Setter Property="FontSize" Value="17" />
    </Style>

    <Style TargetType="Button">
      <Setter Property="Foreground" Value="{StaticResource TextBrush}" />
      <Setter Property="FontSize" Value="17" />
      <Setter Property="Padding" Value="16,10" />
      <Setter Property="MinHeight" Value="44" />
      <Setter Property="Background" Value="#274868" />
      <Setter Property="BorderBrush" Value="#4AA1C4" />
      <Setter Property="BorderThickness" Value="1" />
    </Style>

    <Style TargetType="TextBox">
      <Setter Property="Foreground" Value="{StaticResource TextBrush}" />
      <Setter Property="Background" Value="#132840" />
      <Setter Property="BorderBrush" Value="#33597A" />
      <Setter Property="BorderThickness" Value="1" />
      <Setter Property="FontSize" Value="16" />
      <Setter Property="Padding" Value="10,8" />
    </Style>

    <Style TargetType="PasswordBox">
      <Setter Property="Foreground" Value="{StaticResource TextBrush}" />
      <Setter Property="Background" Value="#132840" />
      <Setter Property="BorderBrush" Value="#33597A" />
      <Setter Property="BorderThickness" Value="1" />
      <Setter Property="FontSize" Value="16" />
      <Setter Property="Padding" Value="10,8" />
    </Style>

    <Style TargetType="ComboBox">
      <Setter Property="Foreground" Value="{StaticResource TextBrush}" />
      <Setter Property="Background" Value="#132840" />
      <Setter Property="BorderBrush" Value="#33597A" />
      <Setter Property="BorderThickness" Value="1" />
      <Setter Property="FontSize" Value="16" />
      <Setter Property="Padding" Value="8,6" />
      <Setter Property="MinHeight" Value="42" />
    </Style>

    <Style TargetType="CheckBox">
      <Setter Property="Foreground" Value="{StaticResource TextBrush}" />
      <Setter Property="FontSize" Value="16" />
    </Style>
  </Application.Resources>
</Application>
